<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.ListJourneysFragment" android:id="@+id/showAllJourneysCheckBox">

    <ListView
        android:id="@+id/journeyListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:headerDividersEnabled="false"/>

    <TextView
        android:id="@+id/journeyTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

</FrameLayout>